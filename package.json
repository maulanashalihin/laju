{
  "name": "laju",
  "version": "1.0.9",
  "description": "Laju (Indonesian for 'fast/swift') is a high-performance TypeScript web framework combining HyperExpress, Svelte 5, and Inertia.js for building modern full-stack applications. Features server-side rendering, real-time capabilities, and seamless client-server state management.",
  "main": "server.ts",
  "scripts": {
    "dev": "rimraf dist build && concurrently \"vite\" \"nodemon --config nodemon.json\"",
    "build": "vite build && tsc && tsc-alias -p tsconfig.json", 
    "refresh": "npx tsx commands/native/RefreshDatabase.ts",
    "migrate": "npx tsx commands/native/Migrator.ts up",
    "migrate:down": "npx tsx commands/native/Migrator.ts down",
    "tailwind:migrate": "npx tsx commands/native/TailwindMigrate.ts",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:install": "playwright install"
  },
  "author": "Maulana Shalihin",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.906.0",
    "@aws-sdk/s3-request-presigner": "^3.906.0",
    "@inertiajs/svelte": "^2.2.10",
    "@tailwindcss/typography": "^0.5.16",
    "@types/uuid": "^10.0.0",
    "axios": "^1.7.7",
    "better-sqlite3": "^12.4.1",
    "concurrently": "^9.0.1",
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.5",
    "eta": "^4.5.0",
    "googleapis": "^144.0.0",
    "hashids": "^2.3.0",
    "hyper-express": "^6.17.3",
    "ioredis": "^5.4.1",
    "kysely": "^0.28.10",
    "lucide-svelte": "^0.562.0",
    "nodemailer": "^7.0.12",
    "postcss": "^8.4.49",
    "resend": "^6.5.2",
    "sharp": "^0.34.4",
    "tailwindcss": "^3.4.17",
    "ts-node": "^10.9.2",
    "uuidv7": "^1.0.2",
    "winston": "^3.18.3",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.0",
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "@tailwindcss/vite": "^4.1.18",
    "@testing-library/svelte": "^5.2.9",
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^5.0.0",
    "@types/node": "^22.7.9",
    "@types/nodemailer": "^7.0.5",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "4.0.17",
    "@vitest/ui": "^4.0.10",
    "autoprefixer": "^10.4.23",
    "happy-dom": "^20.0.10",
    "mkdirp": "^3.0.0",
    "nodemon": "^3.1.7",
    "rimraf": "^5.0.0",
    "supertest": "^7.1.4",
    "svelte": "^5.41.3",
    "svelte-loader": "^3.2.4",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.21.0",
    "typescript": "^5.6.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.10"
  }
}
