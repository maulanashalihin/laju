var fs = require("fs");

(async ()=>{
    
    const natives = fs.readdirSync("./commands/native");
    
    if(natives.length)
    {
        const { exec } = require("child_process");

        const args = process.argv.slice(2);


        if(natives[0].includes("js"))
        {
            
            exec("npx ts-node -r tsconfig-paths/register ./commands/index.ts "+args.join(" "), (err, stdout, stderr)=>{   
                if(err)
                {
                    console.log(err);
                }else{
                    console.log(stdout);
                }
            })

        }else if(natives[0].includes("ts")){
     
          
            exec("npx ts-node ./commands/index.ts "+args.join(" "), (err, stdout, stderr)=>{   
                if(err)
                {
                    console.log(err);
                }else{
                    console.log(stdout);
                }
            })
        }
    }
  
})()
